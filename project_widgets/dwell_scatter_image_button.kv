<DwellScatterImageButton>:
    do_translation: False
    do_translation_x: False
    do_translation_y: False
    do_scale: False
    do_rotation: False
    accept_touch_even_if_all_transforms_are_false: True
    do_collide_after_children: True

    canvas:
        Color:
            rgba: root.color
        Rectangle:
            size: root.size
            source: root.source
