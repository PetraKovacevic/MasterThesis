<Selection2Widget>:
	size: root.size
	canvas.before:
		Color:
			rgba: 0, 0, 0, 0.7
		Rectangle:
			pos: self.pos
			size: self.size
	
	BoxLayout:
		orientation: 'vertical'
		padding: 10, 10, 20, 10
		spacing: 20
		size: 500, 400
		center: root.center
		
		canvas.before:
			Color:
				rgba: 1, 1, 1, 1
			BorderImage:
				border: 10, 10, 10, 10
				source: 'images/selection_background6.png'
				pos: self.pos
				size: self.size
				
		Label:
			font_size: 30
			color: 1, 0.6, 0, 1
			text:'[b]Stage 2: Discussion[/b]'
			#center: self.parent.center_x, self.parent.top - 20
			markup: True
			size_hint_y: 0.4
			pos_hint: {'center_x': .5}
			
		Label:
			font_size: 20
			text:'In the discussion stage you will take turns sharing your material with the rest of the group.\nDiscuss as a group how you will use the gathered material to solve the given problem.\nEnlarge images from your image container by double taping them.'
			markup: True
			pos_hint: {'center_x': .5}
			halign: 'center'
			valign: 'middle'
			text_size: self.parent.width - 100, self.parent.height - 100
			
		Button:
			id: submit_button
			text: 'Submit'
			size_hint: 0.4, 0.3
			on_press: root.submit_button()
			pos_hint: {'center_x': .5}
				