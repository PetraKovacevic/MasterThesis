<Stage1MessageWidget>:
	size: root.size
	canvas.before:
		Color:
			rgba: 0, 0, 0, 0.7
		Rectangle:
			pos: self.pos
			size: self.size
	
	BoxLayout:
		orientation: 'vertical'
		padding: 20, 10, 20, 10
		spacing: 20
		size: 500, 400
		center: root.center
		
		canvas.before:
			Color:
				rgba: 1, 1, 1, 1

			BorderImage:
				border: 10, 10, 10, 10
				source: 'images/selection_background6.png'
				pos: self.pos
				size: self.size
				
		Label:
			font_size: 30
			color: 1, 0.6, 0, 1
			text:'[b]Stage 1: Transfering Material[/b]'
			markup: True
			size_hint_y: 0.3
			pos_hint: {'center_x': .45}
			
		Label:
			font_size: 20
			text:'Transfer material from your tablet or smartphone to the tabletop.\n\nYou will be given a set of options specific to this stage. Discuss them as a group.'
			markup: True
			pos_hint: {'center_x': .45}
			halign: 'center'
			valign: 'middle'
			text_size: self.parent.width - 100, self.parent.height - 100
			
		Button:
			id: ok_button
			text: 'OK'
			size_hint: .3, .2
			pos_hint: {'center_x': .45}
			on_press: root.ok_button()
				