<SelectionTimeWidget>:
	size: root.size
	canvas.before:
		Color:
			rgba: 0, 0, 0, 0.7
		Rectangle:
			pos: self.pos
			size: self.size
	
	BoxLayout:
		orientation: 'vertical'
		padding: 20, 10, 20, 10
		spacing: 10
		size: 500, 400
		center: root.center
		
		canvas.before:
			Color:
				rgba: 1, 1, 1, 1

			BorderImage:
				border: 10, 10, 10, 10
				source: 'images/selection_background6.png'
				pos: self.pos
				size: self.size
				
		Label:
			id: title
			font_size: 30
			color: 1, 0.6, 0, 1
			text:'[b]Stage duration[/b]'
			markup: True
			size_hint_y: 0.4
			pos_hint: {'center_x': .45}
			
		GridLayout:
			cols: 4
			size_hint_y: 0.2
			#size_hint_x: 0.9
			pos_hint: {'center_x': .45}
			
			Label:
				font_size: 18
				text: 'Choose the stage duration (minutes):'
				halign: 'left'
			Button:
				text: '-'
				on_press: root.reduce_time()
				size_hint_x: 0.15	
			Label:
				id: stage_duration
				text: str(root.stage_duration)
				size_hint_x: 0.1
			Button:
				text: '+'
				on_press: root.add_time()
				size_hint_x: 0.15
		
		Label:
			id: body
			font_size: 20
			text:'When the time is up, a prompt will appear asking if you have finished the stage or if you need more time. To exit a stage early press the timer in the upper left corner.'
			markup: True
			pos_hint: {'center_x': .45}
			halign: 'justify'
			valign: 'middle'
			text_size: self.parent.width - 100, self.parent.height - 100
			
		Button:
			id: submit_button
			text: 'Submit'
			size_hint: .4, .3
			pos_hint: {'center_x': .45}
			on_press: root.submit_button()
				