<ChooseWidget>:
	size: root.size
	canvas.before:
		Color:
			rgba: 0, 0, 0, 0.7
		Rectangle:
			pos: self.pos
			size: self.size
			
	GridLayout:
		cols: 4
		size: 600, 100
		center_x: root.center_x
		top: root.height - 100
		
		Label:
			font_size: 50
			text: 'Number of users:'
			halign: 'left'
		Button:
			text: '-'
			on_press: root.reduce_num()
			size_hint_x: 0.2	
		Label:
			id: numberOfUsers
			font_size: 50
			text: str(root.numberOfUsers)
			size_hint_x: 0.1
		Button:
			text: '+'
			on_press: root.add_num()
			size_hint_x: 0.2
			
	GridLayout:
		cols: 3
		spacing: 10
		center: self.parent.center_x, self.parent.center_y + 75 
		size: 600, 100
			
		Label:
			font_size: 50
			text: 'With scripting'
		ToggleButton:
			text: 'Yes'
			group: 'scripting'
			id: toggle_button_1
			size_hint_x: 0.2
			state: 'down'
			background_down: 'images/toggle_button.png'
		ToggleButton:
			text: 'No'
			group: 'scripting'
			id: toggle_button_2
			size_hint_x: 0.2
			background_down: 'images/toggle_button.png'
		
	GridLayout:
		cols: 3
		spacing: 10
		size: 600, 100
		center_x: root.center_x
		center_y: 300
			
		Label:
			font_size: 50
			text: 'Which User Study?'
		ToggleButton:
			text: '1'
			group: 'user_study'
			id: toggle_button_1
			size_hint_x: 0.2
			state: 'down'
			background_down: 'images/toggle_button.png'
		ToggleButton:
			text: '2'
			group: 'user_study'
			id: toggle_button_2
			size_hint_x: 0.2
			background_down: 'images/toggle_button.png'
		
	Button:
		id: ok_button
		text: 'Submit'
		size: 200, 100
		#size_hint: .3, .2
		center_x: root.center_x
		y: 50
		on_press: root.choose_button()