<SelectionColourWidget>:
	size: root.size
	canvas.before:
		Color:
			rgba: 0, 0, 0, 0.7
		Rectangle:
			pos: self.pos
			size: self.size
	
	BoxLayout:
		orientation: 'vertical'
		padding: 20, 10, 20, 10
		spacing: 15
		size: 500, 400
		center: root.center
		
		canvas.before:
			Color:
				rgba: 1, 1, 1, 1

			BorderImage:
				border: 10, 10, 10, 10
				source: 'images/selection_background6.png'
				pos: self.pos
				size: self.size
				
		Label:
			id: title
			font_size: 30
			color: 1, 0.6, 0, 1
			text:'[b]Colour code material[/b]'
			markup: True
			size_hint_y: 0.4
			pos_hint: {'center_x': .45}
			
		GridLayout:
			cols: 3
			spacing: 10
			center: self.parent.center
			size_hint_y: 0.2
			size_hint_x: 0.8
			pos_hint: {'center_x': .4}
			
			Label:
				font_size: 18
				text: 'Colour code material'
				halign: 'left'
			ToggleButton:
				text: 'Yes'
				group: 'colour'
				id: toggle_button_1
				size_hint_x: 0.2
				state: 'down'
				background_down: 'images/toggle_button.png'
			ToggleButton:
				text: 'No'
				group: 'colour'
				id: toggle_button_2
				size_hint_x: 0.2
				background_down: 'images/toggle_button.png'
		
		GridLayout:
			cols: 2
			
			Image:
				source: 'images/colour_coded.png'
			Image:
				source: 'images/no_colour_coded.png'
				
		GridLayout:
			cols: 2
			size_hint_y: 0.2
			Label:
				font_size: 15
				text: 'Identify owner'
			Label:
				font_size: 15
				text: 'Anonymous owner'
			
		Button:
			id: submit_button
			text: 'Submit'
			size_hint: .4, .3
			pos_hint: {'center_x': .45}
			on_press: root.submit_button()
				