<SelectionDisableWidget>:
	size: root.size
	canvas.before:
		Color:
			rgba: 0, 0, 0, 0.7
		Rectangle:
			pos: self.pos
			size: self.size
	
	BoxLayout:
		orientation: 'vertical'
		padding: 20, 10, 20, 10
		spacing: 10
		size: 500, 400
		center: root.center
		
		canvas.before:
			Color:
				rgba: 1, 1, 1, 1

			BorderImage:
				border: 10, 10, 10, 10
				source: 'images/selection_background6.png'
				pos: self.pos
				size: self.size
				
		Label:
			id: title
			font_size: 30
			color: 1, 0.6, 0, 1
			text:'[b]Disable touch interaction[/b]'
			markup: True
			#center: self.parent.center_x, self.parent.top - 20 
			size_hint_y: 0.4
			pos_hint: {'center_x': .45}
			
		GridLayout:
			cols: 3
			spacing: 10
			center: self.parent.center
			size_hint_y: 0.2
			size_hint_x: 0.8
			pos_hint: {'center_x': .4}
			
			Label:
				font_size: 18
				text: 'Disable touch interaction?'
				halign: 'left'
			ToggleButton:
				text: 'Yes'
				group: 'disable'
				id: toggle_button_1
				size_hint_x: 0.2
				state: 'down'
				background_down: 'images/toggle_button.png'
			ToggleButton:
				text: 'No'
				group: 'disable'
				id: toggle_button_2
				size_hint_x: 0.2
				background_down: 'images/toggle_button.png'
		
		Label:
			id: body
			font_size: 20
			text:'Disabling touch interaction will not allow you to use the tabletop while transferring material. This option is made to discourage off-task activites, such as touching your own or other peoples material as we want to focus only on transferring material in this stage.'
			markup: True
			pos_hint: {'center_x': .45}
			halign: 'justify'
			valign: 'middle'
			text_size: self.parent.width - 100, self.parent.height - 100
			
		Button:
			id: submit_button
			text: 'Submit'
			size_hint: .4, .3
			pos_hint: {'center_x': .45}
			on_press: root.submit_button()
				